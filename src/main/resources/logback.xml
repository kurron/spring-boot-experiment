<!-- This Logback configuration file is intended for production environments. -->
<configuration debug="false">
    <contextName>Thor</contextName>
    <property name="MESSAGE_FORMAT"
              value="%contextName %5.5relative %1(%.-1level) %4.4mdc{application-type} %10.10mdc{work-unit} %10.10mdc{username} %35.35logger{0} %4.4mdc{message-code} %message %throwable{short}%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${MESSAGE_FORMAT}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ALL</level>
        </filter>
    </appender>

    <appender name="LFS" class="com.moonlit.logfaces.appenders.logback.LogfacesAppender">
        <remoteHost>192.168.254.123</remoteHost>
        <application>Thor</application>
        <locationInfo>true</locationInfo>
        <reconnectionDelay>1000</reconnectionDelay>
        <offerTimeout>0</offerTimeout>
        <queueSize>200</queueSize>
        <appender-ref ref="CONSOLE" />
        <delegateMarker>true</delegateMarker>
    </appender>

    <logger name="com.transparent" level="ALL"/>
    <logger name="org.springframework" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LFS"/>
    </root>
</configuration>